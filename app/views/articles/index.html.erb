<h1>Articles</h1>
<%= link_to '+ Add a new article', new_article_path %>
<% @articles.each do |article|%>
  <h3><%= link_to article.title, article_path(article) %></h3>
  <p><%= article.content.split('. ')[0] %>.</p>
  <%= link_to 'See details', article_path(article) %>
  <%= link_to 'Bin', article_path(article), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
